<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mini Whatsapp</title>

  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
</head>

<body class="d-flex flex-column min-vh-100">

  <!-- Header -->
  <header class="bg-dark text-white py-3 shadow">
    <div class="container d-flex justify-content-between align-items-center">
      <h1 class="h3 mb-0">ğŸ’¬ Mini Whatsapp</h1>
      <button class="toggle-btn" onclick="toggleMode()">
        <span class="toggle-icon">ğŸŒ™</span>
      </button>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container my-4 flex-grow-1">

    <form method="GET" action="/chats/new" class="mb-4">
      <button class="btn btn-success">â• New Chat</button>
    </form>

    <% chats.forEach(chat => { %>
      <div class="chat-card mb-4 p-3 rounded shadow-sm">
        <div class="chat-header d-flex justify-content-between">
          <div>
            <strong>From:</strong> <%= chat.from %><br>
            <strong>To:</strong> <%= chat.to %>
          </div>
          <div><%= new Date(chat.created_at).toLocaleString() %></div>
        </div>

        <div class="chat-message mt-3">
          <%= chat.message %>
          <div class="d-flex gap-2 mt-2">
            <form method="GET" action="/chats/<%= chat._id %>/edit">
              <button class="btn btn-warning btn-sm">âœï¸ Edit</button>
            </form>
            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
              <button class="btn btn-danger btn-sm">ğŸ—‘ï¸ Delete</button>
            </form>
          </div>
        </div>

        <div class="chat-footer mt-2 text-end text-muted fst-italic">
          Last updated: <%= new Date(chat.updated_at).toLocaleString() %>
        </div>
      </div>
    <% }); %>

  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <div>
      &copy; <%= new Date().getFullYear() %> <strong>Suchana Hazra</strong> | Built with ğŸ’™ using Node.js & EJS
    </div>
    <div class="small">"Crafted with care and code!"</div>
  </footer>

  <!-- Script -->
  <script>
    let isDark = false;

    function toggleMode() {
      document.body.classList.toggle('dark-mode');
      const icon = document.querySelector('.toggle-icon');
      icon.textContent = isDark ? 'ğŸŒ™' : 'â˜€ï¸';
      isDark = !isDark;
    }
  </script>

</body>

</html>
